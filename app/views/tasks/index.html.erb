
<h1>My Todos</h1>

 <%= form_for Task.new, remote: true do |f| %>
   <div class="form-group">
     <%= f.text_field :description, placeholder:
     "what needs doing?" %>
   </div>

   <div class="form-group">
     <%= f.text_field :priority, placeholder: "priority level" %>
   </div>

   <div class="form-group">
   <%= f.submit %>
   </div>

 <% end %>

 <ul>
   <% if @tasks %>
 <% @tasks.each do |task| %>
      <%= render partial:'task', locals: {task: task} %>
 <% end %>
<% end %>

 </ul>
